<!--components/mySteps/index.wxml-->

<view class="my_steps_wrapper">
  <view class="steps_item" wx:for="{{steps}}" wx:key="*this">
    <view class="steps_text">{{item.show_time}}</view>
    <view class="steps_box">
      <view class="steps_line"></view>
      <view class="steps_point"></view>
      <view class="steps_line"></view>
    </view>
    <image class="steps_img" src="{{item.pic}}"></image>
  </view>
</view>
