/* pages/index/components/search/index.wxss */

.search_box{
  position: fixed;
  top: 0;
  width: 100vw;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  z-index: 100;
  box-sizing: border-box;
  box-shadow: 1rpx 1rpx 5rpx 2.5rpx #ccc;
}

.search_box .location_box{
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 120rpx;
}

.search_box .location_box .city{
  font-size: 30rpx;
}


.van-search__content{
  border-radius: 50rpx;
  background-color: #ccc;
}

.search_box .search_content{
  width: 500rpx;
  height: 90rpx;
}

.search_box .calendar{
  width:70rpx;
  text-align: right;
}