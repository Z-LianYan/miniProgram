.hot_wrapper{
  height:900rpx;
  padding:20rpx 20rpx;
}
.hot_wrapper .hot_title{
  font-size: 30rpx;
  font-weight: bold;
  padding: 10rpx;
}
.hot_wrapper .scroll_box{
  white-space: nowrap; 
  display: flex
}

.hot_wrapper .scroll_box .scroll_item{
  width: 200rpx;
  display: inline-block;
  margin-right: 20rpx;
}

.hot_wrapper .scroll_box .scroll_item .hot_image{
  width: 100%;
  height: 136px;
  border-radius: 10rpx;
}
