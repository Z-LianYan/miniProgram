<view class="container authorization">
    <view class="wrapper">
        <view class="logo_box">
            <image 
            class="logo" 
            src="/images/logo.png"
            lazy-load="true"/>
        </view>

        <text class="title">
            聚橙票务
        </text>

        <view class="btn_box">
            <button class="btn" size="mini" type="default" plain="true">
                手机号一键授权登录
            </button>
        </view>

        <view class="radio_box">
            <button wx:if="{{canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
            <label class="label" data-value="1"  bindtap="onChange">
                <radio 
                color="#ec6901"
                class="radio" 
                checked="{{isChecked}}"
                />以阅读并同意
            </label>
            <text style="color:#ec6901" bindtap="onNavigateAgreement">《聚橙用户协议声明》</text>
        </view>
        
 
    </view>

</view>
