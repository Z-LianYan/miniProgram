.content_list{
    padding-top: 20rpx;
}
.list_item{
    display: flex;
    padding: 30rpx 0;
}
.list_item .list_img{
    width: 210.1rpx;
    height: 286.14rpx;
    border-radius: 7rpx;
}
.list_item .list_content{
    width: 509.74rpx;
    padding-left: 30.16rpx;
}
.list_item .list_content .date_wrapper{
    font-weight: bolder;
}

.list_item .list_content .date_wrapper .week{
    color:#666;
    margin: 0 15rpx;
}
.list_item .list_content .date_wrapper .time{
    color:#666;
}

.list_item .list_content .title{
    font-weight: bolder;
    white-space:pre-line;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    margin-top: 5rpx;
}
.list_item .list_content .location{
    color:#666;
    line-height: 50rpx;
    font-size: 25rpx;
}
.list_item .list_content .location .separator{
 margin: 0 10rpx;
}

.list_item .list_content .support_desc .desc{
    margin-right: 10rpx;
}

.price_wrapper{
    color:#666;
    font-weight: bolder;
    line-height: 80rpx;
}
.price_wrapper .price{
    color:#ff6743;
}
.price_wrapper .price{
    color:#ff6743;
    margin-right: 10rpx;
}
.price_wrapper .font{
    color:#bdbebd;
    font-size: 20rpx;
}