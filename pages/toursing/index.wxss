.tour_sing_wrapper{
    
}

.tour_sing_wrapper .scroll_y{
    max-height: calc(100vh - 90rpx);
}


.tour_sing_wrapper .list_item{
    display: flex;
    padding: 33rpx 0 33rpx 30rpx;
    box-sizing: border-box;
}

.tour_sing_wrapper .list_item .left_img .img{
    width: 219.96rpx;
    height: 300rpx;
    border-radius: 10rpx;
}
.tour_sing_wrapper .list_item .right_content{
    /* width: calc(100vw - 219.96rpx - 30rpx); */
}
.tour_sing_wrapper .list_item .right_content .title{
    margin: 20rpx 0 0 20rpx;
    width: 470rpx;
    margin-left: 20rpx;
    color: #000;

    white-space:wrap;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    
    
}


.tour_sing_wrapper .list_item .right_content .scroll_x_view{
    width: calc(100vw - 219.96rpx - 30rpx);
    white-space: nowrap;
}

.tour_sing_wrapper .list_item .right_content .scroll_x_view .scroll_x_item{
    display: inline-block;
    width: 120rpx;
    height: 182.94rpx;
    color: #666;
}

.tour_sing_wrapper .list_item .right_content .scroll_x_view .scroll_x_item .city_name{
    height: 96rpx;
    line-height: 96rpx;
    text-align: center;
}


.tour_sing_wrapper .list_item .right_content .scroll_x_view .scroll_x_item .separator_wrapper{
    display: flex;
    align-items: center;
}
.tour_sing_wrapper .list_item .right_content .scroll_x_view .scroll_x_item .separator_wrapper .line{
    width: 60rpx;
    height: 7rpx;
    background-color: #ccc;
}

.tour_sing_wrapper .list_item .right_content .scroll_x_view .scroll_x_item .separator_wrapper .rebg{
    background-color: transparent; 
}


.tour_sing_wrapper .list_item .right_content .scroll_x_view .scroll_x_item .separator_wrapper .point{
    width: 14rpx;
    height: 14rpx;
    border-radius: 7rpx;
    background-color: #ccc;
}

.tour_sing_wrapper .list_item .right_content .scroll_x_view .scroll_x_item .date{
    height: 81.94rpx;
    line-height: 81.94rpx;
    text-align: center;
}