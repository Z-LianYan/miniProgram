.theater_item_box{
  margin-bottom: 40rpx;
  border: 1rpx solid #ccc;
  box-shadow: 0.5rpx 1rpx 5rpx 0.5rpx #ccc;
  border-radius: 10rpx;
}

.theater_item_box .theater_info{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.theater_item_box .theater_info .info_wrapper{
  display: flex;
  align-items: center;
  /* line-height: 100rpx; */
}

.theater_item_box .theater_info .info_wrapper .info_box{
  margin-left: 15rpx;
}

.theater_item_box .theater_info .info_wrapper .info_box .theater_name{
  width: 400rpx;
  font-size: 40rpx;
  font-weight: bolder;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.theater_item_box .theater_info .info_wrapper .info_box .sale_count{
  color: #666;
  font-size: 25rpx;
}

.theater_scroll_view{
  white-space: nowrap;
  padding-top: 30rpx;
}

.theater_scroll_view .steps_wrapper{
  width: 100%;
  display: inline-block;
}


.scroll_header{
  text-align:center;
  height:50rpx;
}